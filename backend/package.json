{
  "name": "crossfit-audit-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application d'audit CrossFit - Tulip Conseil",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/initDatabase.js",
    "migrate": "node migrations.js migrate",
    "migrate:status": "node migrations.js status",
    "migrate:create": "node migrations.js create",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:business": "jest __tests__/business --verbose",
    "test:coverage": "jest --coverage",
    "test:calculations": "jest calculations.test.js --verbose",
    "test:applicatif": "jest __tests__/business __tests__/controllers --verbose",
    "test:crud": "jest __tests__/models __tests__/middleware __tests__/utils --verbose"
  },
  "keywords": [
    "crossfit",
    "audit",
    "api",
    "express"
  ],
  "author": "Valentin - Tulip Conseil",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "better-sqlite3": "^9.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "morgan": "^1.10.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
